{
  "extends": "expo/tsconfig.base",
  "strict": true,
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/app/*": ["./ui/*"],
      "@/domain/*": ["./domain/*"],
      "@/infra/*": ["./infra/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
